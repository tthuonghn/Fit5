<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Show information while running"
            android:textSize="20dp"
            android:layout_alignParentStart="true"
            android:textColor="@color/primary_text"
            />

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/show_info_switch"
            android:layout_alignParentEnd="true"
            android:checked="true"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Weight : "
            android:textSize="20dp"
            android:layout_alignParentStart="true"
            android:id="@+id/txtView3"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:textColor="@color/primary_text"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="60 kg"
            android:textSize="20dp"
            android:id="@+id/setting_page_weight"
            android:layout_marginBottom="5dp"
            android:layout_toRightOf="@+id/txtView3"
            android:textColor="@color/primary_text"
        />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/primary_text"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/txtView3"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="200"
            android:layout_alignParentEnd="true"
            android:textColor="@color/primary_text"
            android:layout_below="@+id/txtView3"
            />

    </RelativeLayout>

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/setting_page_weight_seekBar"
        android:progress="30"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Step length : "
            android:textSize="20dp"
            android:layout_alignParentStart="true"
            android:id="@+id/txtView4"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:textColor="@color/primary_text"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="70 cm"
            android:textSize="20dp"
            android:id="@+id/setting_page_step_length"
            android:layout_marginBottom="5dp"
            android:layout_toRightOf="@+id/txtView4"
            android:textColor="@color/primary_text"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/primary_text"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/txtView4"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="200"
            android:layout_alignParentEnd="true"
            android:textColor="@color/primary_text"
            android:layout_below="@+id/txtView4"
            />

    </RelativeLayout>

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/setting_page_step_length_seekBar"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:progress="35"
        />


    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="RESET ALL DATA"
        android:layout_margin="50dp"
        android:id="@+id/setting_page_reset_button"
        />



</LinearLayout>